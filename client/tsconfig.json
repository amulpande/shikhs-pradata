{
  "compilerOptions": {
    "typeRoots":[ "./node_modules/redux-persist/types"],
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*":[
        "./lib/*"
      ],
      // "@slices/*":[
      //   "./slice/*"
      // ],
      // "@api/*":[
      //   "./api/*"
      // ],
      // "@store/*":[
      //   "./store/*"
      // ],
      // "@notification/*":[
      //   "./notification/*"
      // ],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
